<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fragment_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true" >

    <RelativeLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/top_bar_icon"
            android:background="@color/light_grey" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/text_layout"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/top_bar_container">
        <TextView
            android:id="@+id/top_caption_text"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/top_bar_icon"
            android:text="Please click on image to add Client Residence picture to process"
            android:textColor="@color/white"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/picture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_layout">

        <ImageView
            android:id="@+id/head_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/national_id" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/picture_layout">

        <Button
            android:id="@+id/head_picture_button"
            style="@style/send_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit" />
    </LinearLayout>


</RelativeLayout>


