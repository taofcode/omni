    <style name="fragment_top_caption_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="send_button" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@mipmap/background</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="fragment_style">
        <item name="android:background">@mipmap/background</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>



    <style name="dataItemCaption" parent="android:Widget.Holo.Light.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dataItemValue" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/general_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic|normal</item>
    </style>

